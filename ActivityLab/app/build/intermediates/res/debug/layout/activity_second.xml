<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.project.ygimenez.activitylab.SecondActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:text="@string/on_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/onCreateText2Id" />

            <TextView
                android:text="@string/on_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/onStartText2Id" />

            <TextView
                android:text="@string/on_resume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/onResumeText2Id" />

            <TextView
                android:text="@string/on_restart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/onRestartText2Id" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/onCreateCpt2Id" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/onStartCpt2Id" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/onResumeCpt2Id" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/onRestartCpt2Id" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/close_activity"
        android:id="@+id/closeActivityButtonId"
        android:layout_marginTop="89dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
