<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.ygimenez.labintent"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.project.ygimenez.labintent.ActivityLoaderActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.project.ygimenez.labintent.ExplicitActivation"
            android:label="@string/title_activity_explicit_activation"
            android:parentActivityName="com.project.ygimenez.labintent.ActivityLoaderActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.project.ygimenez.labintent.ActivityLoaderActivity" />
        </activity>
    </application>

</manifest>